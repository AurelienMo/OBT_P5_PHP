{% extends 'core/layout.html.twig' %}
{% block body %}

    <div id="contact">
        <section class="clearfix">
            <div class="container">
                <div class="col-lg-12">
                    <h2>PRENONS CONTACT ... </h2>
                    <form id="contact-form" method="post" action="/contact" role="form">
                        <div class="controls">
                            <div class="row">
                                <div class="col-md-5">
                                    {% for error in  errors['name'] %}
                                        <div class="alert alert-danger">
                                            {{ error }}
                                        </div>
                                    {% endfor %}
                                    <label for="form_name">Firstname *</label>
                                    <input id="form_name" type="text" name="name" class="form-control"
                                           placeholder="Votre prénom *"  value="{{ name }}" required="required"
                                           data-error="Votre prénom est nécessaire.">
                                </div>
                                <div class="col-md-5">
                                    {% for error,key in errors['lastName'] %}
                                        <div class="alert alert-danger">
                                            {{ key }}
                                        </div>
                                    {% endfor %}
                                    <label for="form_lastname">Lastname *</label>
                                    <input id="form_lastname" type="text" name="lastName"
                                           class="form-control" placeholder="Votre nom *" value="{{ lastName }}"
                                           required="required" data-error="Votre nom est nécessaire.">
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-10">
                                    <label for="form_email">Email *</label>
                                    {% for error in errors['E-mail'] %}
                                        <div class="alert alert-danger">
                                            {{ error }}
                                        </div>
                                    {% endfor %}
                                    <br>
                                    <input id="form_email" type="text" name="mail" class="form-control"
                                           placeholder="Votre mail *" value="{{ mail }}" required="required"
                                           data-error="Votre adresse mail n'est pas valide.">
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-10">
                                    {% for error in errors['messages'] %}
                                        <div class="alert alert-danger">
                                            {{ error }}
                                        </div>
                                    {% endfor %}
                                    <label for="form_message">Message * value = "{{ messages }}" </label>
                                    <textarea id="form_message" name="messages" class="form-control"
                                              placeholder="Votre message ... *" rows="4" required
                                              data-error="S'il vous plaît, laisser un message."></textarea>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-10">
                                    <div class="submit-ob">
                                        <input type="submit" value="Envoyer">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </section>
    </div>
{% endblock %}