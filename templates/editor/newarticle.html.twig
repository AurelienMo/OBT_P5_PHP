                            console.error(error);
                        });
                </script>
                    <button type="submit" class="btn-perso" name="content" >Envoyer l'article</button>
                    <button onclick="location.href=/profil?page=1" type="submit" class="btn-perso" name="cancel" >Annuler</button>
