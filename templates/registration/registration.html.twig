{% extends 'core/layout.html.twig' %}
{% block body %}

<body >
<h1 class = "obt"> Formulaire d'inscription </h1>
<div class = "content-obt">
    <div class = "form_obt">
        <form action = "#" method = "post" class = "agile_form">
            <div class = "agileits-left">
                <div id = "bloc">
                    <label for = "pseudo"> Pseudo * </label>
                    <input type = "text" name = "nom d'utilisateur" id = "nom d'utilisateur" size = "30" requis/>
                    <br>
                    <label for = "mail"> E-mail * </label>
                    <input type = "email" name = "mail" id = "mail" size = "30" requis/>
                    <br>
                    <label for = "confirm_mail"> E-mail de confirmation * </label>
                    <input type = "email" name = "confirm_mail" id = "confirm_mail" size = "30" requis/>
                    <br>
                    <label for = "mdp"> Mot de passe * </label>
                    <input type = "password" name = "mdp" id = "mdp" size = "30" requis/>
                    <br>
                    <label for = "confirm_mdp"> Confirmer le mot de passe * </label>
                    <input type = "password" name = "confirm_mdp" id = "confirm_mdp" size = "30" requis/>
                    <br>
                </div>

                <div class = "submit-ob">
                    <input type = "submit" value = "S'inscrire">
                </div>
                <div class = "submit-ob">
                    <input type = "submit" value = "Annuler">
                </div>
            </div>
        </form>
            <div class = "clear">
                <h2 class = "copyright-agileits"> © 2018 OBT-Development Registration. Tous droits réservés | Concu par
                    <a href="https://www.obt-development.eu" target="_blank"> Olivier Boutet </a>
                </h2>
            </div>
    </div>
</div>
</body>
{% endblock %}
